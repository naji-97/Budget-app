  </head>

  <body>
    <div class="messages">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>
    <%= render 'shared/navbar' %>
    <div class="container">
      <div class="body-content">


    <%= yield %>
    </div>
    </div>
  </body>
</html>
